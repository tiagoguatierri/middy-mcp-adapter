{
  "name": "middy-mcp-adapter",
  "version": "0.0.4",
  "description": "Middleware to adapt mcp server interface to aws lambda",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENCE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "vitest run"
    ]
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiagoguatierri/middy-mcp-adapter.git"
  },
  "keywords": [
    "Middy",
    "Lambda",
    "Middleware",
    "Serverless",
    "Node.js",
    "AWS",
    "AWS Lambda",
    "MCP"
  ],
  "author": "Tiago Guatierri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tiagoguatierri/middy-mcp-adapter/issues"
  },
  "homepage": "https://github.com/tiagoguatierri/middy-mcp-adapter#readme",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@middy/core": "^4.7.0",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/aws-lambda": "^8.10.156",
    "@types/http-errors": "^2.0.5",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "http-errors": "^2.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "prettier": "3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.3"
  },
  "peerDependencies": {
    "@middy/core": ">=4.0.0",
    "@modelcontextprotocol/sdk": ">=1.0.0",
    "http-errors": ">=2.0.0"
  }
}
